[Unit]
Description=Model Switcher API Server
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/pi-rag/model-handler
ExecStart=/usr/bin/python3 /home/pi/pi-rag/model-handler/main.py --host 0.0.0.0 --port 6006
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target