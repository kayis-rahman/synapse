{
  "mcpServers": {
    "sequentialthinking": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "mcp/sequentialthinking"
      ],
      "enabled": true
    },
    "postgres": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-e",
        "DATABASE_URI",
        "crystaldba/postgres-mcp",
        "--access-mode=unrestricted"
      ],
      "environment": {
        "DATABASE_URI": "postgresql://timebeam:timebeam@piworm.local:5432/timebeam"
      },
      "enabled": true
    },
    "rag": {
      "type": "local",
      "command": [
        "/home/dietpi/pi-rag/start_rag_mcp.sh"
      ],
      "cwd": "/home/dietpi/pi-rag",
      "enabled": true
    }
  }
}
